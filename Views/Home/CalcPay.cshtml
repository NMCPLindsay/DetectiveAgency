@model Employee
@{
    ViewData["Title"] = "New Employee Form";
}

<div class="row">
    <h1 class="col-md-12">Future Value Calculator</h1>
    <form asp-action="Index" method="post" class="col-md-6">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div>
            <label asp-for="Id">ID:</label>
            <input asp-for="Id" />
        </div>
        <div>
            <label asp-for="Name">Name:</label>
            <input asp-for="Name" />
        </div>
        <div>
            <label asp-for="Hours">Hours:</label>
            <input asp-for="Hours" />
        </div>
        <div>
            <label asp-for="Rate">Rate:</label>
            <input asp-for="Rate" />
        </div>
        <div>
            <label>Future Value:</label>
            <input value="@ViewBag.Salary.ToString("C2")" readonly>
        </div>
        <button asp-controller="Home" asp-action="CalcPay">Calculate</button>
        <button asp-controller="Home" asp-action="Index">Clear</button>
    </form>


